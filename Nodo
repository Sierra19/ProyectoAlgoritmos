public class Nodo{
    //se crea un dato de cualquier clase 
    //se crean las referencias izquierda y derecha de el nodo raiz
    public Nodo izq;
    public Nodo der;
    /**
     * Este es el constructor de un nodo
     */
    public Nodo (){
        izq = null;
        der = null;
        
    } 
}
